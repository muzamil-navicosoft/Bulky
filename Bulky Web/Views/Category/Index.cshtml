@model IEnumerable<Category>

<div class="row">
    <div class="col-6"> <h3>Category List</h3></div>
    <div class="col-6 text-end pb-3"><a class="btn btn-danger" asp-controller="category" asp-action="create">Create New</a></div>
</div>
<table class="table table-hover">
    <thead>
        <tr class="col-12 table-dark">
            <th class="col-5 text-center">Name</th>
            <th class="col-5 text-center">DisplayOrder</th>
            <th class="col-2 text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var x in Model)
        {
            <tr class ="col-5 text-center table-light">
                <td> @x.Name </td>
                <td> @x.DisplayOrder </td>
                <td>
@*                    here the value od asp-route- ( id  should be the same as parameter )
*@                    <a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id="@x.Id">  <i class="bi bi-pencil-square"></i> Edit  </a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@x.Id">  <i class="bi bi-trash"></i> Delete  </a>
                </td>
            </tr>
        }
    </tbody>
</table>