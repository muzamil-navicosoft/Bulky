@model Category

<form method="post">
    <div class="border p-3">
        <div class="row pb-2">
            <h2 class="text-danger"> Create Category </h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label asp-for="Name"> </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"> </label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div>
            <button class="btn btn-primary" asp-controller="Category" asp-action="Edit">Save Changes</button>
            <button class="btn btn-outline-warning" asp-controller="category" asp-action="index">Back To List</button>
        </div>
    </div>

</form>

@section Scripts{

    <partial name="_ValidationScriptsPartial">

    }
